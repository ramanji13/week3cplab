#include<stdio.h>
int main()
{
    float tmarks=0;
    float marksentered=0;
    float tsubjects=0;
    float avg=0;
    
      printf("\n enter 0 to end");
 do{
     printf("\n tsubjects %f\t tmarks%f\t avg %.2f\t",tsubjects,tmarks,avg);
     printf("\n enter marks\n");
     scanf("%d",&marksentered);
     tsubjects++;
     tmarks+=marksentered;
     avg=tmarks/tsubjects;
     
 }
    while(marksentered !=0);

}
